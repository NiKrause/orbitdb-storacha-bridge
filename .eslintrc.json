{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "prefer-const": "warn",
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["examples/**/*.js"],
      "rules": {
        "no-unused-vars": "off",
        "no-console": "off"
      }
    },
    {
      "files": ["lib/**/*.js"],
      "rules": {
        "prefer-const": "error",
        "no-unused-vars": [
          "error",
          {
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_"
          }
        ]
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    "coverage/",
    "*.min.js",
    "dist/",
    "orbitdb/",
    "examples/svelte/*/build/**",
    "examples/svelte/*/dist/**"
  ],
  "globals": {
    "localStorage": true,
    "window": true,
    "document": true,
    "File": true,
    "crypto": true,
    "Buffer": true
  }
}
