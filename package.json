{
  "name": "orbitdb-storacha-bridge",
  "version": "1.0.0",
  "description": "Complete OrbitDB database replication via Storacha/Filecoin with 100% hash preservation and identity recovery",
  "main": "lib/orbitdb-storacha-bridge.js",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "test:verbose": "npm test -- --verbose",
    "test:backup": "npm test -- test/backup.test.js",
    "test:restore": "npm test -- test/restore.test.js", 
    "test:integration": "npm test -- test/integration.test.js",
    "demo": "node examples/demo.js",
    "backup-demo": "node examples/backup-demo.js",
    "restore-demo": "node examples/restore-demo.js",
    "lint": "eslint lib/ examples/ test/",
    "format": "prettier --write lib/ examples/ test/",
    "clean": "rm -rf ./cid-bridge-test* ./demo-test*"
  },
  "keywords": [
    "orbitdb",
    "storacha",
    "filecoin", 
    "ipfs",
    "backup",
    "replication",
    "web3",
    "decentralized",
    "database",
    "cid",
    "bridge"
  ],
  "author": "OrbitDB Storacha Bridge Contributors",
  "license": "MIT",
  "dependencies": {
    "@chainsafe/libp2p-gossipsub": "^14.1.1",
    "@chainsafe/libp2p-noise": "^16.1.4",
    "@chainsafe/libp2p-yamux": "^7.0.4",
    "@ipld/dag-cbor": "^9.0.6",
    "@libp2p/identify": "^3.0.38",
    "@libp2p/tcp": "^10.1.18",
    "@orbitdb/core": "^3.0.2",
    "@web3-storage/w3up-client": "^17.3.0",
    "blockstore-level": "^2.0.3",
    "datastore-level": "^11.0.3",
    "dotenv": "^17.2.1",
    "helia": "^5.3.0",
    "libp2p": "^2.1.8",
    "multiformats": "^12.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/orbitdb-storacha-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/orbitdb-storacha-bridge/issues"
  },
  "homepage": "https://github.com/your-org/orbitdb-storacha-bridge#readme",
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 60000,
    "verbose": true
  }
}
